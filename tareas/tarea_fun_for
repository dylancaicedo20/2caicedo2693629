def es_primo(numero):
    if numero < 2:
        return False
    for i in range(2, int(numero/2)+1):
        if numero % i == 0:
            return False
    return True

def verificar_primo():
    numero = int(input("Ingresa un número entero positivo: "))
    if es_primo(numero):
        print("El número", numero, "es primo.")
    else:
        print("El número", numero, "no es primo.")
        
verificar_primo()
